{
  "name": "custard",
  "type": "module",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "custard": "node ./packages/command/dist/custard.js",
    "build": "tsc -b tsconfig.build.json",
    "clean": "rimraf -g \"packages/**/dist\" \"packages/**/*.tsbuildinfo\" \"*.tsbuildinfo\"",
    "test": "pnpm run -r test",
    "test:detailed": "pnpm run test -- --reporter verbose",
    "test:once": "pnpm run test -- run",
    "test:coverage": "pnpm run test -- run --coverage",
    "lint": "eslint .",
    "fix:lint": "eslint --fix .",
    "format": "prettier --write */*/src/**/*.ts",
    "prepare": "pnpm run build"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-love": "^121.0.0",
    "@typescript-eslint/parser": "8.37.0",
    "typescript-eslint": "8.37.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-no-ignore-returned-union": "^0.6.2",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@10.22.0"
}
